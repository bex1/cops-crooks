<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dat255.project.android.copsandcrooks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.dat255.project.android.copsandcrooks.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.LobbyActivity"
            android:label="@string/title_activity_lobby" >
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.InstructionsActivity"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.dat255.project.android.copsandcrooks.GameBrowseActivity"
            android:label="@string/title_activity_game_browse" >
        </activity>
    </application>

</manifest>